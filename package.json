{
	"name": "vscode-metaed-ide",
	"displayName": "MetaEd IDE",
	"description": "Ed-Fi MetaEd IDE for Visual Studio Code",
	"license": "SEE LICENSE IN LICENSE.md",
	"version": "4.2.2-dev.22",
	"publishConfig": {
		"registry": "https://pkgs.dev.azure.com/ed-fi-alliance/Ed-Fi-Alliance-OSS/_packaging/EdFi/npm/registry/"
	},
	"publisher": "Ed-FiAlliance",
	"icon": "static/ed-fi-128x128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ed-Fi-Alliance-OSS/vscode-metaed-ide"
	},
	"homepage": "https://techdocs.ed-fi.org/display/EDFITOOLS/MetaEd+IDE",
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"bugs": {
		"url": "https://tracker.ed-fi.org"
	},
	"keywords": [
		"metaed",
		"MetaEd",
		"EdFi",
		"edfi",
		"Ed-Fi",
		"ed-fi"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/client/LanguageClient.js",
	"contributes": {
		"commands": [
			{
				"command": "metaed.build",
				"title": "Build",
				"category": "MetaEd"
			},
			{
				"command": "metaed.deploy",
				"title": "Deploy",
				"category": "MetaEd"
			},
			{
				"command": "metaed.crash",
				"title": "Test Crash",
				"category": "MetaEd"
			}
		],
		"languages": [
			{
				"id": "metaed",
				"aliases": [
					"MetaEd",
					"metaed"
				],
				"extensions": [
					".metaed"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "metaed",
				"scopeName": "source.metaed",
				"path": "./syntaxes/metaed.tmLanguage.json"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "metaed.build",
					"group": "navigation"
				},
				{
					"command": "metaed.deploy",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "MetaEd",
			"properties": {
				"metaed.targetOdsApiVersion": {
					"order": 1,
					"description": "The target Ed-Fi ODS/API version",
					"type": "string",
					"default": "7.1.0",
					"enum": [
						"5.1.0",
						"5.3.0",
						"6.1.0",
						"7.1.0"
					]
				},
				"metaed.odsApiDeploymentDirectory": {
					"order": 2,
					"description": "Full path to root folder for the Ed-Fi ODS / API source code.  The folder this points to should contain Ed-Fi-ODS and Ed-Fi-ODS-Implementation folders.",
					"type": "string",
					"default": ""
				},
				"metaed.acceptedLicense": {
					"order": 3,
					"markdownDescription": "Usage of the MetaEd IDE requires acceptance of the [Ed-Fi License Agreement](https://www.ed-fi.org/getting-started/license-ed-fi-technology). Check the box to accept the license terms.",
					"type": "boolean",
					"default": false
				},
				"metaed.suppressDeleteOnDeploy": {
					"order": 4,
					"description": "Stop deployment from deleting the SupportingArtifacts API folder.  For advanced users only.",
					"type": "boolean",
					"default": false
				},
				"metaed.allianceMode": {
					"order": 5,
					"description": "For Alliance users only, this makes core files editable. Non-Alliance users must leave this setting disabled to avoid dangerous and costly mistakes.",
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"build": "npm run build:clean && npm run build:copy-non-ts && npm run build:dist",
		"build:clean": "rimraf dist",
		"build:dist": "tsc",
		"build:copy-non-ts": "copyfiles -u 1 -e \"**/*.ts\" \"src/**/*\" dist --verbose",
		"package": "npm run build:clean && npm run build && npm run package:clean && npm run package:vsce",
		"package:clean": "rimraf extension && mkdir extension",
		"package:vsce": "npx vsce package --allow-star-activation --allow-missing-repository --out extension/vscode-metaed.vsix",
		"test:lint": "npm run test:lint:ts && npm run test:lint:eslint",
		"test:lint:eslint": "eslint --max-warnings 0 --ext .js,.ts .",
		"test:lint:ts": "tsc -p . --noEmit"
	},
	"dependencies": {
		"@edfi/ed-fi-model-3.2c": "3.0.2",
		"@edfi/ed-fi-model-3.3b": "3.0.2",
		"@edfi/ed-fi-model-4.0": "3.0.2",
		"@edfi/ed-fi-model-5.0": "3.0.0",
		"@edfi/metaed-console": "4.2.2-dev.22",
		"@edfi/metaed-core": "4.2.2-dev.22",
		"@edfi/metaed-default-plugins": "4.2.2-dev.22",
		"@edfi/metaed-odsapi-deploy": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-handbook": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-changequery": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-changequery-postgresql": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-changequery-sqlserver": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-postgresql": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-recordownership": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-recordownership-postgresql": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-recordownership-sqlserver": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-relational": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-ods-sqlserver": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-odsapi": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-sql-dictionary": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-unified": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-unified-advanced": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-xml-dictionary": "4.2.2-dev.22",
		"@edfi/metaed-plugin-edfi-xsd": "4.2.2-dev.22",
		"chmodr": "^1.2.0",
		"p-debounce": "2.1.0",
		"ramda": "^0.28.0",
		"semver": "^5.7.1",
		"tmp-promise": "^1.1.0",
		"vscode-languageclient": "^8.0.0",
		"vscode-languageserver": "^8.0.0",
		"vscode-uri": "^3.0.6"
	},
	"devDependencies": {
		"@types/chmodr": "^1.0.0",
		"@types/glob": "^7.2.0",
		"@types/node": "17.0.45",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "5.40.1",
		"@typescript-eslint/parser": "5.40.1",
		"@vscode/vsce": "^2.15.0",
		"copyfiles": "^2.4.1",
		"eslint": "8.26.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-config-typescript": "3.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jasmine": "^4.1.3",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-prettier": "4.2.1",
		"prettier": "2.7.1",
		"rimraf": "^2.7.1",
		"typescript": "4.8.4",
		"vscode-test": "^1.6.1"
	}
}
